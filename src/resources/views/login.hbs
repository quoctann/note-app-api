<div class="card p-3 mx-auto mt-2" style="width: 25rem">
  {{#if isLogin}}
  <h1>IS LOGIN</h1>
  {{/if}}
  <h2 class="text-center">Login</h2>
  <form action="/user/login" method="POST">
    <!-- Email input -->
    <div class="form-outline mb-4">
      <input id="username" class="form-control" name="username"/>
      <label class="form-label" for="username">Username</label>
    </div>

    <!-- Password input -->
    <div class="form-outline mb-4">
      <input type="password" id="password" class="form-control" name="password"/>
      <label class="form-label" for="password">Password</label>
    </div>

    <!-- Submit button -->
    <div class="sign-in-btn d-grid">
      <button type="submit" class="btn btn-primary mb-4 mx-auto">Login</button>
    </div>

    <!-- Register buttons -->
    <div class="text-center">
      <p>Not a member? <a href="/user/register">Register</a></p>
    </div>
  </form>
</div>